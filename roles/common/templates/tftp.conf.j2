DEFAULT {{ os_name }}

LABEL {{ os_name }}
	kernel linux
	append auto=true initrd=initrd.gz dmraid=true debian-installer/language=ru astra-license/license=true hostname={{ item.hostname|default('any') }} domain={{ default_domain.upper() }} url=http://{{ hostvars[inventory_hostname].ansible_eth0.ipv4.address }}{{ link_to_tftp_files }}/{% if item.preseed is defined and item.preseed %}{{ item.preseed|replace('.j2','') }}{% else %}{{ default_preseed_filename }}{% endif %} interface={{ eth_interface }} netcfg/dhcp_timeout=60

TIMEOUT 1
