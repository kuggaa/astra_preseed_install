# переменные для настройки сервера автоматической инсталляции ОС

    # Указываем имя необходимого шаблона (preseed file) для автоматической установки linux, если нужен другой шаблон, то его можно 
    # создать по аналогии c шаблонами расположенными в roles/common/templates
    preseed_file_template: 'preseed.cfg.raid.j2'

    # Имя цели используемое tftp
    os_name: 'astra'

    # Полную путь к репозиторию пакетов(!репозиторий создается самостоятельно, простейший случай просто путь к подмонтированному cd диску!)
    path_to_packages_mirror: '/srv/se13'
    link_to_packages_mirror: '/astra'
    path_to_tftp_files: '/srv/tftp'
    link_to_tftp_files: '/tftpboot'

    # Имя домена
    default_domain: 'hac'

    # Диапазон ip для dhcp сервера
    dhcp_subset: [172.16.0.20, 172.16.0.22, 255.255.255.0]

    # Список для автоназначения hostname, для добавления новой машины, через запятую
    # пишем { hostname: 'Имя машины(доступны след. символы 'a-zA-Z0-9' и знак '-')', ip: 'ip адрес из диапазона указанного в dhcp_subset' }
    target_machines: [{ hostname: 'hacnode1', ip: '172.16.0.20' }, { hostname: 'hacnode2', ip: '172.16.0.21' },  { hostname: 'hacnode3', ip: '172.16.0.22' }]
